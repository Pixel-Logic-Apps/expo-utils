{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "declaration": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": ["node"],
        "paths": { "@/*": ["./src/*"] },
        "baseUrl": "./src"
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "**/*.test.*", "templates"]
}
